<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MenuBarController">
   <children>
      <MenuBar layoutX="10.0" layoutY="10.0">
         <menus>
            <Menu mnemonicParsing="false" text="Djelatnici">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#unosDjelatnika" text="Unos" />
                  <MenuItem mnemonicParsing="false" onAction="#djelatnikSearch" text="Pretraga" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Dobavljaci">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#dobavljaciSearch" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#unosDobavljaca" text="Unos" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Lijekovi">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#lijekiSearch" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#unosLijeka" text="Unos" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Pacijenti">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#pacijentSearch" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#unosPacijenta" text="Unos" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Kosarica">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#kosaricaSearch" text="Pretraga" />
                  <MenuItem mnemonicParsing="false" onAction="#racuniSearch" text="Racuni" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Prikaz promjena">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#prikazPromjeni" text="Promjene" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
